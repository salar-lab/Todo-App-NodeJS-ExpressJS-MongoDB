<%- include('../partials/header') -%>
<section>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card text-black mt-5 mb-5 shadow" style="border-radius: 25px;">
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <h2 class="card-title text-center mb-5 mx-1 mx-md-4 mt-4">
                                Show Task
                            </h2>
                            <form action="/" method="POST" enctype="multipart/form-data"
                                  class="row justify-content-center mx-1 mx-md-4">
                                <div class="col-md-10 col-lg-7 col-xl-7 order-2 order-lg-1">
                                    <div class="ms-md-3 me-md-3 ms-1 me-1 text-center">
                                        <%- include('../partials/messages') -%>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <label>&#10004; Assigned to:</label>
                                            <span class="text-muted float-end"> <%= task.createdToName %> </span>
                                            <hr class="mt-0">
                                        </div>
                                        <div class="form-group">
                                            <label>&#128198; Created in:</label>
                                            <span class="text-muted float-end mb-3"><%=
                                                task.createDate.toLocaleString('en-GB', { timeZone: 'UTC' }) %></span>
                                        </div>
                                        <div class="form-group d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label">Title</label>
                                                <br>
                                                <span class="text-muted"><%= task.title %></span>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label">Description</label>
                                                <br>
                                                <span class="text-muted"><%= task.text %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <a href="/todo">
                                            <button type="button" class="btn btn-secondary btn-lg me-md-3 me-2">
                                                <i class="fas fa-arrow-circle-left"></i>&ensp;Back
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') -%>