<%- include('partials/header') -%>
    <section>
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black mt-5 mb-5 shadow" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center ps-lg-5 pe-lg-5">
                                <h2 class="card-title text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</h2>
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <div class="ms-md-3 me-md-3 ms-1 me-1 text-center">
                                        <%- include('partials/messages') -%>
                                    </div>
                                    <form action="/register" method="POST" class="mx-1 mx-md-4">
                                        <div class="row">
                                            <div class="form-group d-flex flex-row align-items-center mb-4 col-lg-6">
                                                <i class="fas fa-user fa-lg fa-fw mt-4 me-2 ms-lg-1"></i>
                                                <div class="form-outline flex-fill mb-0 ms-lg-1">
                                                    <label class="form-label" for="firstNameID">First Name</label>
                                                    <input type="text" name="name" id="firstNameID"
                                                        class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group d-flex flex-row align-items-center mb-4 col-lg-6">
                                                <i class="fas fa-user fa-lg fa-fw mt-4 me-2 ms-lg-1"></i>
                                                <div class="form-outline flex-fill mb-0 ms-lg-1">
                                                    <label class="form-label" for="lastNameID">Last Name</label>
                                                    <input type="text" name="lastname" id="lastNameID"
                                                        class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-envelope fa-lg fa-fw mt-4 me-2"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="emailAddressID">Email address</label>
                                                    <input type="email" name="email" id="emailAddressID"
                                                        class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-lock fa-lg fa-fw mt-4 me-2"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="passwordID">Password</label>
                                                    <input type="password" name="password" id="passwordID"
                                                        class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-check d-flex justify-content-center mb-5">
                                            <input class="form-check-input me-2" type="checkbox" id="checkboxID"
                                                value="" />
                                            <label class="form-check-label" for="checkboxID">I agree all statements
                                                in <a href="#">Terms of service</a></label>
                                        </div>
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-success btn-lg">Register</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-6 d-flex align-items-center order-1 order-lg-2 ps-4">
                                    <img src="../images/register2.png" class="img-fluid">
                                </div>
                            </div>
                            <div>
                                <p class="text-center text-muted">Have already an account? <a href="/login"
                                        class="fw-bold text-body"><u>Back to Login</u></a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') -%>